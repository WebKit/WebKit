exclude PlatformMac.cmake
exclude PlatformWPE.cmake
exclude PlatformWin.cmake
exclude PlatformWinCairo.cmake
exclude tags$
exclude ~$
exclude \.#$
exclude \.bak$
exclude \.cproject$
exclude \.git$
exclude \.gitattributes$
exclude \.gitignore$
exclude \.icns$
exclude \.lproj$
exclude \.m$
