use strict;
use File::Spec;
use FindBin;
use lib $FindBin::Bin;
use webkitdirs;

push(@ARGV, "--chromium");
setConfiguration();
my $pathToBinary = productDir() . "/webkit_unit_tests";
# perl's "system" function's return value has to be right shifted by 8 to get the program's exit code.
exit system ($pathToBinary, @ARGV) >> 8;
