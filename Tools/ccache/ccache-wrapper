try_one()
{
    [[ -x "$1" && ! -d "$1" ]] && { CCACHE="$1"; return 0; }
    return 1
}

try()
{
    [[ -n "${CCACHE}" ]] && return 0
    try_one "$1" || \
    try_one "$1/ccache" || \
    try_one "$1/bin/ccache"
}

try $(which ccache &> /dev/null)
try /usr/local
try /opt/brew
try /opt/homebrew
try "${HOMEBREW_TEMP}/../brew"
try "${HOMEBREW_TEMP}/../../brew"

if [[ -n "${CCACHE}" ]]; then
    CCACHE_SLOPPINESS="pch_defines,time_macros" "${CCACHE}" "$@"
else
    "$@"
fi
