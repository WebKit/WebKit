[library]
description = "The WPE platform library"
license = "BSD"
authors = "Igalia S.L."
version = "@PROJECT_VERSION@"
repository_url = "https://github.com/WebKit/WebKit"
website_url = "https://wpewebkit.org"
dependencies = ["GObject-2.0", "Gio-2.0"]
realated = ["WPEPlatformWayland-2.0"]
devhelp = true
search_index = true

[dependencies."GObject-2.0"]
name = "GObject"
description = "The base type system library"
docs_url = "https://docs.gtk.org/gobject/"

[dependencies."Gio-2.0"]
name = "Gio"
description = "GObject Interfaces and Objects, Networking, IPC, and I/O"
docs_url = "https://docs.gtk.org/gio/"

[related."WPEPlatformWayland-2.0"]
name = "WPEPlatformWayland"
description = "The WPE platform Wayland implementation library"
docs_url = "../wpe-platform-wayland-@WPE_API_VERSION@/index.html"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
base_url = "https://github.com/WebKit/WebKit/tree/main"

[extra]
content_files = [
    "tutorial-browser.md",
    "tutorial-platform.md"
]
urlmap_file = "urlmap.js"