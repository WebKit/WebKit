import("../webrtc.gni")
import("//third_party/protobuf/proto_library.gni")
if (is_android) {
  import("//build/config/android/config.gni")
  import("//build/config/android/rules.gni")
}

group("logging") {
  public_deps = [
    ":rtc_event_log_impl",
  ]
  if (rtc_enable_protobuf) {
    public_deps += [ ":rtc_event_log_parser" ]
