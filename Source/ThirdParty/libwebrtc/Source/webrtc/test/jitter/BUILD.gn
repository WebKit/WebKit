import("../../webrtc.gni")

rtc_library("delay_variation_calculator") {
  visibility = [ "*" ]
  sources = [
    "delay_variation_calculator.cc",
    "delay_variation_calculator.h",
  ]
  deps = [
    "../../api/numerics",
    "../../api/test/metrics:metrics_logger",
    "../../api/units:data_size",
    "../../api/units:frequency",
    "../../api/units:time_delta",
    "../../api/units:timestamp",
    "../../api/video:video_frame_type",
    "../../rtc_base:logging",
    "../../rtc_base:rtc_numerics",
