import("../../webrtc.gni")

rtc_source_set("unit_base") {
  visibility = [
    "../../api/units:*",
    ":*",
  ]
  sources = [ "unit_base.h" ]

  deps = [
    "../../rtc_base:checks",
    "../../rtc_base:safe_conversions",
  ]
}

if (rtc_include_tests) {
  rtc_library("units_unittests") {
    testonly = true
    sources = [ "unit_base_unittest.cc" ]
    deps = [
      ":unit_base",
      "../../test:test_support",
    ]
  }
}
