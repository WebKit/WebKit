# Helper template for including "main" files in Chromium.
template("angle_tests_main") {
  source_set(target_name) {
    testonly = true
    public_deps = googletest_deps
    deps = [
      "${angle_root}:includes",
    ]

    main = invoker.main

    if (build_with_chromium) {
      sources = [
        "//gpu/$main.cc",
      ]
    } else {
      sources = [
        "$main.cpp",
      ]
    }
  }
}

