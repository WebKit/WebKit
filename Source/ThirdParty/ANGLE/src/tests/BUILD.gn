    # SystemUtils.RunApp, the only unittest using a helper binary, is not supported on these
    # platforms yet.
    data_deps = [ ":test_utils_unittest_helper" ]
  }

  if (angle_has_rapidjson) {
    sources += [ "../common/serializer/JsonSerializer_unittest.cpp" ]
  }
