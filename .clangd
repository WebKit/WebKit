If:
    PathMatch: [.*\.h]
CompileFlags:
    Add: [-xobjective-c++, --include=config.h, -std=c++2a, -mthumb]
---
If:
    PathMatch: [.*\.cpp]
CompileFlags:
    Add: [--include=config.h, -mthumb]
---
If:
    PathMatch: [.*\.mm]
CompileFlags:
    Add: [-xobjective-c++, --include=config.h, -std=c++2a]
---
If:
    PathMatch: [.*\.m]
CompileFlags:
    Add: [-xobjective-c, --include=config.h]
